<%- include('../header') %>
<form action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>" method="POST">
    <div class="form-group">
        <label for="titulo">Publicação</label>
        <input id="titulo" class="input-group" placeholder="Insira o titulo da publicação" type="text" name="titulo"
            value="<%= publicacao.titulo %>"/>
    </div>
    <div class="form-group">
        <label for="conteudo">Conteúdo</label>
        <textarea name="conteudo" id="conteudo" cols="30" rows="10" class="form-control" placeholder="Insira o conteúdo"><%= publicacao.conteudo %></textarea>
    </div> 
        
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
<%- include('../footer') %>