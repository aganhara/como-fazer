<%- include('../header') %>
<form action="/publicacoes/nova" method="POST">
    <div class="form-group">
        <label for="titulo">Publicação</label>
        <input id="titulo" class="input-group" placeholder="Insira o titulo da publicação" type="text" name="titulo"/>
    </div>
    <div class="form-group">
        <label for="categoria">Categoria</label>
        <select class="form-control" name="categoria" id="categoria">
            <% categorias.forEach( categoria => { %>
                <option value="<%= categoria.id %>"><%= categoria.categoria %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-group">
        <label for="conteudo">Conteúdo</label>
        <textarea name="conteudo" id="conteudo" cols="30" rows="10" class="form-control" placeholder="Insira o conteúdo"></textarea>
    </div> 
        
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
<%- include('../footer') %>